// Initial template for C++

#include <bits/stdc++.h>
using namespace std;


// } Driver Code Ends
//User function template for C++

class Solution {
  public:
    int romanToDecimal(string &str) {
        
        int ans = 0;
        int n = str.length();
        
        for(int i = 0; i<n; i++)
        {
            if(str[i] == 'M')
            {
                ans += 1000;
            }
            if(str[i] == 'D')
            {
                ans += 500;
            }
            if(str[i] == 'L')
            {
                ans += 50;
            }
            if(str[i] == 'V')
            {
                ans += 5;
            }
            if(str[i] == 'C')
            {
                if(str[i+1] == 'M' || str[i+1] == 'D')
                {
                    ans -= 100;
                }
                else
                {
                    ans += 100;
                }
            }
            if(str[i] == 'X')
            {
                if(str[i+1] == 'L' || str[i+1] == 'C')
                {
                    ans -= 10;
                }
                else
                {
                    ans += 10;
                }
            }
            if(str[i] == 'I')
            {
                if(str[i+1] == 'V' || str[i+1] == 'X')
                {
                    ans -= 1;
                }
                else
                {
                    ans += 1;
                }
            }
        }
        return ans;
    }
};

//{ Driver Code Starts.

int main() {
    int t;
    cin >> t;
    while (t--) {
        string s;
        cin >> s;
        Solution ob;
        cout << ob.romanToDecimal(s) << endl;
    }
}
// } Driver Code Ends
