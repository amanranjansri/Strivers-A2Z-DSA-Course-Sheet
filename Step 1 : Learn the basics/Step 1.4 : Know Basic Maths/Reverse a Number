//--> LeetCode <--

class Solution {
public:
    int reverse(int x) {
        
        int ans = x;
        long long int rem = 0;

        while(ans != 0)
        {
            int digit = ans%10;
            rem = (rem * 10) + digit;
            if ((rem > INT_MAX)||(rem< INT_MIN))
            {
                return 0;
            }
            ans = ans/10;
        }
        return rem;
    }
};
